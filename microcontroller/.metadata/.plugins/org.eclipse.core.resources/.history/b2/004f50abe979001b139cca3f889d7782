#include "stm32l1xx.h"
#include "stm32l_discovery_lcd.h"
#include "stm32l1xx_gpio.h"
#include <stdio.h>
#include <stdlib.h>
#include <string.h>

int HX711(void) {

	RCC_AHBPeriphClockCmd(RCC_AHBPeriph_GPIOA, ENABLE);
	GPIO_InitTypeDef DOUT;
	GPIO_InitTypeDef PD_SCK;

	//PD_SCK setup
	PD_SCK.GPIO_Pin = GPIO_Pin_6;
	PD_SCK.GPIO_Mode = GPIO_Mode_OUT;
	PD_SCK.GPIO_Speed = GPIO_Speed_2MHz;
	PD_SCK.GPIO_OType = GPIO_OType_PP;
	PD_SCK.GPIO_PuPd = GPIO_PuPd_DOWN;
	GPIO_Init(GPIOB, &PD_SCK);

	//DOUT
	DOUT.GPIO_Pin = GPIO_Pin_7;
	PD_SCK.GPIO_Mode = GPIO_Mode_IN;
	GPIO_Init(GPIOB, &DOUT);

	//reset hx711
	GPIO_WriteBit(GPIOA, PD_SCK, Bit_SET);
	Delay(100000);
	GPIO_WriteBit(GPIOA, PD_SCK, Bit_RESET);
	Delay(1000);

	unsigned int buffer = 0;

	while(GPIO_ReadInputDataBit(GPIOA, DOUT) == Bit_SET);

	for (int i = 0; i < 24; i++) {
		GPIO_SetBits(GPIOA, PD_SCK);

		int dataBit = GPIO_ReadInputDataBit(GPIOA, DOUT);
	}

}
