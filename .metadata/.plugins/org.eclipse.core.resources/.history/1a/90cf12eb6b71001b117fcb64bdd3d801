//Parse an nmea gll message
void getLatitudeLongitude(gll_message * gll, char * buffer){
	double value = 0;
	int i = 0;
	bool period = FALSE;
	while(buffer[i] != ','){
		if(!period){
			value *= 10;
			value += atoi(buffer[i]);
			i++;
		}
		else if(buffer[i] != '.')
	}
}

